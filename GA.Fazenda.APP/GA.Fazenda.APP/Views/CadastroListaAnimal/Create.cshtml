@model GA.Fazenda.APP.ViewModels.CadastroListAnimal

@{
    ViewData["Title"] = " Novo Animal ";
    Layout = "";
}

<partial name="_partialModalDialog" />

<form asp-action="Create" asp-controller="CadastroListaAnimal">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="modal-body">

        <input type="hidden" id="hdListaAnimal" asp-for="ListAnimaisJson" />

        <vc:summary></vc:summary>

        <div class="row">
            <div class="form-group col-md-5">
                <label asp-for="Tag" class="control-label"></label>
                <input asp-for="Tag" autocomplete="off" class="form-control" />
                <span asp-validation-for="Tag" class="text-danger"></span>
            </div>

            <div class="form-group col-md-1">
                <input type="button" id="btnAddAnimal" value=">>" class="btn btn-info btn-sm" />
            </div>

            <div class="form-group col-md-5">

                <div class="form-group">
                    <label asp-for="AnimaisLista" class="control-label"></label>
                    <select id="listAnimal" asp-items="Model.AnimaisLista" size="12" multiple class="form-control"></select>
                </div>
            </div>

            <div class="form-group col-md-1">
                <input type="button" id="btnRemoveAnimal" value="x" class="btn btn-danger btn-sm" />
            </div>

        </div>

        <div class="form-group">
            <label asp-for="FazendaId" class="control-label"></label>
            <select asp-for="FazendaId" class="form-control" asp-items="@(new SelectList(Model.Fazendas, "Id", "Nome"))">
                <option></option>
            </select>
            <span asp-validation-for="FazendaId" class="text-danger"></span>
        </div>

        <partial name="_partialSubmit" />
    </div>
</form>

